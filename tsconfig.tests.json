{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-build",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": {}
  },
  "include": [
    "lib/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "cms", "pages", "components"]
}
